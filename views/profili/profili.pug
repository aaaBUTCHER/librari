include ../includes/navBar.pug
    block content
        .container.section1.div(style="min-height:65%")
            .row.mt-5
                .col-xl-5.col-sm-12.text-center.imgmain
                        img(src= user.img, width="250px", height="250px").rounded-circle.shadow-4-strong.img-thumnail
                        h1= user.emriIPerdoruesit
                .col-xl-7.col-sm-12
                    .row
                        form(action="/user-profile", method="POST")#profileForm
                            .form-group
                                .row
                                    .col-xl-6.col-sm-12.m-1
                                        label(for="username") Emri
                                        .d-flex.align-items-center
                                            input(type="text", placeholder="Emri", value=user.emri)#username.form-control
                                            button.btn.btn-primary Edit
                                    .col-xl-6.col-sm-12.m-1
                                        label(for="lastname") Mbiemri
                                        .d-flex.align-items-center
                                            input(type="text", placeholder="Mbiemri", value=user.mbiemri)#lastname.form-control
                                            button.btn.btn-primary Edit
                                .row
                                    .col-xl-6.col-sm-12.m-1
                                        label(for="emailaddres") Email Adresa
                                        .d-flex.align-items-center
                                            input(type="email", placeholder="email-ketu", value=user.email)#emailaddres.form-control.mr-2
                                            button.btn.btn-primary Edit
                                    .col-xl-6.col-sm-12.m-1
                                        label(for="pw") Email Adresa
                                        .d-flex.align-items-center
                                            input(type="password", placeholder="email-ketu", value=user.password)#pw.form-control
                                            button.btn.btn-primary Edit
                                .row
                                    .col-xl-12.col-sm-12
                                        label(for="bio") Bio
                                        textarea(placeholder="email-ketu", row="3", resize="none" )#bio.form-control= user.bio
                                        button.btn.btn-primary.m-1 Edit
    include ../includes/footer.pug