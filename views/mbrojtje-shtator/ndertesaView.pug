include ../includes/navBar.pug
    block content
        section
            .div(style="min-height:75%;").container-100
                .row.m-0.d-flex.justify-content-center
                    .col-xl-6.col-sm-12.justify-content-center.align-items-center.p-3.m-3
                        table.table 
                            thead.thead-dark
                                tr
                                    th Id
                                    th Emri212261491 
                                    th DataPT
                            tbody
                                each n in ndertesa
                                    - console.log(n)
                                    tr 
                                        td= n.ID
                                        td= n.Emri212261491
                                        td= n.DataPT
                                        td 
                                            a(href="/ndertesa/"+n.ID).btn.btn-secondary Edito
                                        td 
                                            button.btn.btn-danger(onclick="fshijNdertesen("+n.ID+")") Fshije
                .bg-secondary.p-5.pb-1.pt-1(style="border-radius: 10px; margin-top: 85px !important;").m-3.mb-5.mt-5
                    h1.m-4.text-center.mt-4 Shto Ndertes
                    .justify-content-center
                        form(method="POST" action="/ndertesa")
                            table.table
                                tbody
                                    tr
                                        td
                                            .form-group
                                                label(for="emri212261491") Emri
                                                    input#isbn.form-control(name="emri212261491", type="text")
                                        td
                                            .form-group
                                                label(for="dataPT") Data
                                                    input#titulli.form-control(name="dataPT", type="date")
                                        tr.m-1(style ="border: 1px white !important")
                                            td(colspan="4", style =" border-bottom: none;")
                                                .form-group
                                                    button.btn.btn-primary.m-2(type="submit") Shto Ndertes
                                        .alert-danger.m-1(role="alert", style="display:"+errorActive+"; border-radius: 7px;",)= err
    include ../includes/footer.pug

